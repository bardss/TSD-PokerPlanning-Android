<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tsdproject.pokerplanning">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".base.ApplicationContext"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".participants.ParticipantsActivity" />
        <activity android:name=".access.AccessActivity" />
        <activity android:name=".createroom.CreateRoomActivity" />
        <activity android:name=".cards.CardsActivity" />
        <activity android:name=".registration.RegistrationActivity" />
        <activity android:name=".results.ResultsActivity" />
    </application>

</manifest>